---
const { siteName, siteURL, siteDescription, siteTools, image } = Astro.props;
---

<div
  class="p-3 md:p-4 rounded-sm grid grid-cols-1 items-center gap-6 md:grid-cols-2 bg-gradient-to-r from-dark-green from-65% to-blue to-95%"
>
  <div class="flex flex-col justify-center">
    <h3 class="text-gray-50 text-3xl pb-2.5">
      <a href={siteURL}>{siteName}</a>
    </h3>
    {
      siteTools.length > 0 && (
        <ul class="flex flex-wrap gap-x-2 pb-1">
          <li class="text-gray-200 text-base">Made with:</li>
          {siteTools.map((tool: string, index: number) => (
            <li class="text-gray-200 text-base underline">{tool}</li>
          ))}
        </ul>
      )
    }
    {
      siteDescription && (
        <p class="text-gray-200 text-base">{siteDescription}</p>
      )
    }
  </div>
  <div class="row-start-1 md:row-start-auto">
    {
      image && (
        <a href={siteURL} target="_blank">
          <img
            src={image.url}
            alt={image.alt}
            class="rounded-sm transition-all grayscale-75 hover:grayscale-0 brightness-95 hover:brightness-105"
          />
        </a>
      )
    }
  </div>
</div>
