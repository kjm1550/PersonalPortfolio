---
import projects from "./projects.json";
import ProjectCard from "./ProjectCard.astro";
---

<div class="pb-40 max-w-7xl mx-auto">
  <div class="px-6 md:px-8 lg:px-10 flex flex-col gap-10">
    <h2
      class="text-gray-50 text-5xl whitespace-nowrap flex gap-20 items-center after:content-[''] after:h-1.5 after:w-full after:bg-rust"
    >
      {projects.title}
    </h2>
    <div
      class="pl-8 sm:pl-20 py-4 border-l-6 border-l-rust flex flex-col gap-10 med:gap-4"
    >
      {
        projects.workExamples.map((workExample, index) => (
          <ProjectCard
            key={index}
            siteName={workExample.siteName}
            siteURL={workExample.siteURL}
            siteDescription={workExample.siteDescription}
            siteTools={workExample.siteTools}
            image={workExample.image}
          />
        ))
      }
    </div>
  </div>
</div>
