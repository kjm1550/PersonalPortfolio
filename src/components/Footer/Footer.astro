---
import SocialIcons from "../SocialIcons/SocialIcons.astro";
const currentDate = new Date();
const year = currentDate.getFullYear();
---

<footer class="max-w-7xl mx-auto px-6 md:px-8 lg:px-10">
  <div
    class="bg-blue rounded-sm bg-gradient-to-tl from-blue from-40% to-rust to-100% py-10 px-9 sm:px-21 rounded-t-sm flex gap-9 justify-between items-center flex-wrap"
  >
    <p class="text-gray-200 text-base">&copy; {year} KyleMonk.dev</p>
    <SocialIcons />
  </div>
</footer>
